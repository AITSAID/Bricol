<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="daisousoft.app.com.bricol.BricolleurActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/horizontal_scroll_view"
        android:layout_below="@+id/imageview"
        android:layout_marginTop="80dp"
        android:layout_alignParentEnd="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/job1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="ChooseJob"
            android:background="@drawable/job1"/>

        <Button
            android:id="@+id/job2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="ChooseJob"
            android:background="@drawable/job2" />

        <Button
            android:id="@+id/job3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="ChooseJob"
            android:background="@drawable/job3" />

        <Button
            android:id="@+id/job4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="ChooseJob"
            android:background="@drawable/job4" />

        <Button
            android:id="@+id/job5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="ChooseJob"
            android:background="@drawable/job5" />

        <Button
            android:id="@+id/job6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="ChooseJob"
            android:background="@drawable/job6" />

        <Button
            android:id="@+id/job7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="ChooseJob"
            android:background="@drawable/job7"/>


    </LinearLayout>
    </HorizontalScrollView>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Your Name"
        android:id="@+id/namebrico"
        android:textSize="30dp"
        android:textCursorDrawable="@color/cast_expanded_controller_ad_container_white_stripe_color"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/save" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/save"
        android:onClick="SaveAccount"
        android:background="@drawable/yesbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/delete"
        android:background="@drawable/nobutton"
        android:onClick="UnSaveAccount"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageview"
        android:background="@drawable/register"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/horizontal_scroll_view" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/choice2"
        android:background="@drawable/anonymejob"
        android:onClick="UnCheckJob"
        android:layout_above="@+id/delete"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/choice3"
        android:background="@drawable/anonymejob"
        android:onClick="UnCheckJob"
        android:layout_above="@+id/choice2"
        android:layout_toEndOf="@+id/choice2" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/choice1"
        android:background="@drawable/anonymejob"
        android:onClick="UnCheckJob"
        android:layout_above="@+id/choice2"
        android:layout_toStartOf="@+id/choice2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0672145149"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:id="@+id/phonebrico"
        android:layout_below="@+id/namebrico"
        android:layout_alignStart="@+id/namebrico" />

</RelativeLayout>
