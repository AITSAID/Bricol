<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="daisousoft.app.com.bricol.MapsActivity">

...

<fragment
    android:id="@+id/infoWindowMap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.appolica.interactiveinfowindow.fragment.MapInfoWindowFragment" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profil"
        android:background="@drawable/addbrico"
        android:onClick="goProfil"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <daisousoft.app.com.bricol.Support.PlayGifView
        android:id="@+id/viewGif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="FilterJobs"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/profil"
        android:layout_alignParentEnd="true"
        android:background="@drawable/footer"
        android:id="@+id/imageView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/nearme"
        android:onClick="goToMyLocation"
        android:layout_alignBottom="@+id/profil"
        android:layout_centerHorizontal="true"
        android:id="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  All Jobs  "
        android:gravity="center"
        android:id="@+id/textView"
        android:background="@drawable/rounded_button"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>